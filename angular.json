{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "sebastienbarbier": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/en",
            "index": "src/index.html",
            "main": "src/main.ts",
            "tsConfig": "src/tsconfig.app.json",
            "polyfills": "src/polyfills.ts",
            "assets": [
              "src/assets",
              {
                "glob": "keybase.txt",
                "input": "static/en",
                "output": "/"
              },
              {
                "glob": "robots.txt",
                "input": "static/en",
                "output": "/"
              },
              {
                "glob": "sitemap.xml",
                "input": "static/en",
                "output": "/"
              },
            ],
            "styles": [
              "src/styles.scss"
            ],
            "scripts": [
              "node_modules/marked/marked.min.js"
            ]
          },
          "configurations": {
            "development": {},
            "production": {
              "outputHashing": "all",
              "sourceMap": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "optimization": {
                "scripts": true,
                "styles": {
                  "minify": true,
                  "inlineCritical": false
                },
                "fonts": true
              },
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "sebastienbarbier:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "sebastienbarbier:build:production"
            },
            "development": {
              "browserTarget": "sebastienbarbier:build:development"
            }

          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "sebastienbarbier:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "karmaConfig": "./karma.conf.js",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "src/tsconfig.spec.json",
            "scripts": [
              "node_modules/marked/marked.min.js"
            ],
            "styles": [
              "src/styles.scss"
            ],
            "assets": [
              "src/assets",
              {
                "glob": "keybase.txt",
                "input": "static/en",
                "output": "/"
              },
              {
                "glob": "robots.txt",
                "input": "static/en",
                "output": "/"
              },
              {
                "glob": "sitemap.xml",
                "input": "static/en",
                "output": "/"
              },
            ]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "src/tsconfig.app.json",
              "src/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        },
        "server": {
          "builder": "@angular-devkit/build-angular:server",
          "options": {
            "outputPath": "dist/server",
            "main": "server.ts",
            "tsConfig": "src/tsconfig.server.json"
          },
          "configurations": {
            "production": {},
            "development": {}
          }
        },
        "serve-ssr": {
          "builder": "@nguniversal/builders:ssr-dev-server",
          "configurations": {
            "development": {
              "browserTarget": "sebastienbarbier:build:development",
              "serverTarget": "sebastienbarbier:server:development"
            },
            "production": {
              "browserTarget": "sebastienbarbier:build:production",
              "serverTarget": "sebastienbarbier:server:production"
            }
          },
          "defaultConfiguration": "development"
        },
        "prerender": {
          "builder": "@nguniversal/builders:prerender",
          "options": {
            "browserTarget": "sebastienbarbier:build:production",
            "serverTarget": "sebastienbarbier:server:production",
            "routesFile": "./static.paths.txt"
          },
          "configurations": {
            "production": {}
          },
          "defaultConfiguration": "production"
        }
      }
    },
    "sebastienbarbier-e2e": {
      "root": "e2e",
      "sourceRoot": "e2e",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "./protractor.conf.js",
            "devServerTarget": "sebastienbarbier:serve"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "e2e/tsconfig.e2e.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "cli": {
    "warnings": {
      "typescriptMismatch": false
    },
    "analytics": false
  },
  "schematics": {
    "@schematics/angular:component": {
      "prefix": "app",
      "style": "css"
    },
    "@schematics/angular:directive": {
      "prefix": "app"
    }
  }
}
